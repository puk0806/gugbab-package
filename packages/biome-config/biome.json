{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignoreUnknown": false,
    "include": ["**/*.html", "**/*.css", "**/*.js", "**/*.mjs", "**/*.ts", "**/*.tsx", "**/*.json"],
    "ignore": [
      ".gitignore",
      "**/dist",
      "**/build",
      "**/node_modules",
      "**/coverage",
      "**/env",
      "**/.next",
      "**/.turbo",
      "**/*.properties",
      "**/*.tsconfig.tsbuildinfo",
      "**/storybook-static"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": true,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "assists": {
    "actions": {
      "source": {
        "sortJsxProps": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noAriaHiddenOnFocusable": "error",
        "noAutofocus": "error",
        "noDistractingElements": "error",
        "noHeaderScope": "error",
        "noInteractiveElementToNoninteractiveRole": "error",
        "noNoninteractiveElementToInteractiveRole": "off",
        "noNoninteractiveTabindex": "off",
        "noPositiveTabindex": "off",
        "useAriaPropsForRole": "off",
        "useValidAriaRole": "off",
        "useGenericFontNames": "off",
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off",
        "useValidAriaValues": "info",
        "noLabelWithoutControl": "off",
        "noSvgWithoutTitle": "off",
        "useSemanticElements": "info"
      },
      "correctness": {
        "noUnusedFunctionParameters": "warn",
        "noUnusedVariables": "warn",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "info"
      },
      "style": {
        "useExponentiationOperator": "error",
        "useSelfClosingElements": "error",
        "useSingleVarDeclarator": "error",
        "noUnusedTemplateLiteral": "error",
        "useNodejsImportProtocol": "off",
        "useTemplate": "error",
        "noUselessElse": "error",
        "noVar": "error"
      },
      "complexity": {
        "useLiteralKeys": "off",
        "noExtraBooleanCast": "off",
        "noUselessFragments": "error",
        "noForEach": "off"
      },
      "suspicious": {
        "noShadowRestrictedNames": "info",
        "noExplicitAny": "warn",
        "noArrayIndexKey": "info",
        "noGlobalIsNan": "error",
        "noGlobalIsFinite": "error",
        "noApproximativeNumericConstant": "error",
        "noCommentText": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "info"
      }
    }
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "arrowParentheses": "asNeeded",
      "bracketSpacing": true,
      "semicolons": "always"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    }
  }
}
