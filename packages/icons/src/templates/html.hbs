<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ name }}</title>

  <style>
    @font-face {
      font-family: "{{ name }}";
      src: url("./icons.woff2") format("woff2"), url("./icons.woff") format("woff");
    }

    body {
      font-family: sans-serif;
      margin: 0;
      padding: 10px 20px;
      text-align: center;
    }
    .preview {
      width: 100px;
      display: inline-block;
      vertical-align: top;
      margin: 10px;
    }
    .preview .inner {
      padding:10px 0;
      display: block;
      vertical-align: top;
      width: 100%;
      text-align: center;
      background: #f5f5f5;
      -webkit-border-radius: 3px 3px 0 0;
      -moz-border-radius: 3px 3px 0 0;
      border-radius: 3px 3px 0 0;
    }
    .preview .inner {{ baseTag }} {
      font-size: 40px;
      color: #333;
    }
    .label {
      display: inline-block;
      width: 100%;
      box-sizing: border-box;
      padding: 5px;
      font-size: 16px;
      font-family: Monaco, monospace;
      color: #666;
      word-break: break-all;
      background: #ddd;
      -webkit-border-radius: 0 0 3px 3px;
      -moz-border-radius: 0 0 3px 3px;
      border-radius: 0 0 3px 3px;
      color: #666;
    }

    .{{ prefix }} {
      speak: none;
      font-style: normal;
      font-weight: 400;
      font-variant: normal;
      font-family: icons !important;
      text-transform: none;
      line-height: 1;
      vertical-align: top;
      display: block;
      text-rendering: auto;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
      {{# if selector }}
        {{ selector }}:before {
      {{ else }}
        .icon:before{
      {{/ if }}
      font-weight: normal !important;
      vertical-align: top;
    }

      {{# each codepoints }}
        {{# if ../selector }}
          {{ ../selector }}.{{ ../prefix }}--{{ @key }}:before {
        {{ else }}
          {{ tag }}.{{ ../prefix }}--{{ @key }}:before {
        {{/ if }}
        content: "\\{{ codepoint this }}";
        }
      {{/ each }}
  </style>

</head>
<body>

<h1>{{ name }}</h1>

{{# each assets }}

  <div class="preview">
            <span class="inner">
                <{{ ../tag }} class="{{ ../prefix }} {{ ../prefix }}--{{ @key }}"></{{ ../tag }}>
    </span>
    <span class='label'>{{ @key }}</span>
  </div>

{{/ each }}

</body>
</html>
